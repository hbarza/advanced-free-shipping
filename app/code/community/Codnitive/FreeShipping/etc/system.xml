<config>	
    <sections>
        <codnitiveshippingmethods translate="label" module="freeshipping">
            <label>Shipping Methods</label>
            <tab>codall</tab>
            <frontend_type>text</frontend_type>
            <sort_order>600</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <freeshipping translate="label, comment" module="freeshipping">
                    <label>Advanced Free Shipping</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <active translate="label,tooltip,comment">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <customer_groups translate="label,tooltip,comment">
                            <label>Customer Groups for Free Shipping</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>freeshipping/system_config_source_customergroups</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Free shipping will be available for selected group(s).</comment>
                        </customer_groups>
                    </fields>
                </freeshipping>
            </groups>
        </codnitiveshippingmethods>
    </sections>
</config>
